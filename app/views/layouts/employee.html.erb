<!DOCTYPE html>
<html>
  <head>
    <title>LeaveManagement</title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
  </head>

  <body>
    <nav class="navbar" style="background:#9b0000">
      <div class="container-fluid">
        <div class="navbar-header">
          <img src="http://mis.neosofttech.in//images/logo.jpg" height ="51px">
        </div>
        <div>
          <ul class="nav navbar-nav">
            <li class="active"><a href="<%= home_path %>">Home</a></li>
          </ul>
          <ul class="nav navbar-nav navbar-right">
            <li><%= link_to "edit profile",edit_user_registration_path %> </li>
            <li><%= link_to 'Logout', destroy_user_session_path, class: "" , method: :delete %></li>
          </ul>
        </div>
      </div>
    </nav>

    <div class="col-md-3 well">
      <h3> Welcome <%= current_user.name %> </h3>
      <%#= image_tag auth.info.image %>
      <ul>
        <li>
          <%= link_to 'Request for Leave', new_leafe_path %>
        </li>
        <li>
          <%= link_to 'View Leave Application', leaves_path %>
        </li>
        <li>
          <%= link_to 'View Monthly Attendence', monthly_attendence_users_path %>
        </li>
      </ul>
    </div>

    <div class="col-md-6">
      <%= yield %>
    </div>

  </body>
</html>

<div class="leaves">
  <table class="table table-bordered ">
    <thead>
      <tr>
        <th> Employee </th>
        <th> From Date</th>
        <th> To Date</th>
        <th> Days </th>
        <th> Status </th>
        <th> View More </th>
        <th colspan="4"> Provide Reason </th>
      </tr>
    </thead>
    <tbody>
      <% @leaves.each do |leave| %>
      <tr class="<%=leave.status.status%>">
        <td><%= leave.user.name %></td>
        <td> <%= leave.from_date %> </td>
        <td><%= leave.to_date %> </td>
        <td> <%= leave.get_leaves_day %> Days</td>
        <td> <%= leave.status.status if leave.status.present?  %> </td>
        <td> <%= link_to 'View More', leafe_path(leave) %> </td>
        <td><%= link_to edit_url, edit_statue_path(leave.status) %></td>
        <td> <%= link_to 'Approved', approve_statue_path(leave.status), method: :put,
          remote: :true %>
        </td>
        <td> <%= link_to 'Rejected', reject_statue_path(leave.status), method: :put,
          remote: :true %>
        </td>
        <td>
          <%= link_to delete_url,leave, remote: true,
          method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>

<div class="text-center well">
  <%= form_for @status, :url => {:action => "update"} do |f| %>
  <div class="field">
    <%= f.label :reason %> <br>
    <%= f.text_area :reason,cols: 40, rows: 4 %>
    <%= f.hidden_field :user_id, value: current_user.id %>
  </div>

  <div class="action">
    <%= f.submit class: "btn-sm btn-primary" %>
  </div>
  <% end %>
  <%= link_to "Back", :back %>
</div>




